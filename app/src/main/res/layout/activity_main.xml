<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:gravity="top"
			  android:background="#212121">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>

		<TextView
			android:id="@+id/current_track_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:text="@string/time_not_played_pattern"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:text="@string/time_not_played_delimiter"
			/>

		<TextView
			android:id="@+id/all_track_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:text="@string/time_not_played_pattern"
			/>

	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:gravity="center"
				  android:background="@android:color/holo_green_light"
				  android:layout_margin="10dp">

		<Button android:id="@+id/btn_open_file_chooser"
				android:background="@drawable/btn_open_file_chooser"
				android:layout_width="@dimen/btn_layout_width"
				android:layout_height="@dimen/btn_layout_height"
				android:layout_margin="@dimen/btn_layout_margin"
				/>

		<Button android:id="@+id/btn_get_all_music_from_device"
				android:background="@drawable/btn_get_all_music"
				android:layout_width="@dimen/btn_layout_width"
				android:layout_height="@dimen/btn_layout_height"
				android:layout_margin="@dimen/btn_layout_margin"
				/>

		<ToggleButton
			android:id="@+id/tbtn_repeat"
			android:background="@drawable/tbtn_repeat"
			android:layout_width="@dimen/btn_layout_width"
			android:layout_height="@dimen/btn_layout_height"
			android:layout_margin="@dimen/btn_layout_margin"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:textOn=""
			android:textOff=""
			/>

		<ToggleButton
			android:id="@+id/tbtn_shuffle"
			android:background="@drawable/tbtn_shuffle"
			android:layout_width="@dimen/btn_layout_width"
			android:layout_height="@dimen/btn_layout_height"
			android:layout_margin="@dimen/btn_layout_margin"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:textOn=""
			android:textOff=""
			/>

		<Button android:id="@+id/btn_clear_playlist"
				android:background="@drawable/btn_clear_playlist"
				android:layout_width="@dimen/btn_layout_width"
				android:layout_height="@dimen/btn_layout_height"
				android:layout_margin="@dimen/btn_layout_margin"
			/>

	</LinearLayout>

	<SeekBar
		android:id="@+id/sbar_track_progress"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:maxHeight="9dp"
		android:minHeight="9dp"
		android:progressDrawable="@drawable/sbar_progress"
		android:thumb="@drawable/sbar_thumb"
		/>

	<ListView
			android:id="@+id/lv_playlist"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:choiceMode="singleChoice"
			android:listSelector="@android:color/holo_green_light"
			android:layout_weight="1"
			/>

	<LinearLayout android:orientation="horizontal"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:gravity="center"
				  android:background="@android:color/holo_green_light"
				  android:layout_margin="10dp">

		<Button android:id="@+id/btn_prev_song"
				android:background="@drawable/btn_prev"
				android:layout_width="@dimen/btn_layout_width"
				android:layout_margin="@dimen/btn_layout_margin"
				android:layout_height="@dimen/btn_layout_height"
			/>

		<Button android:id="@+id/btn_play"
				android:background="@drawable/btn_play"
				android:layout_width="@dimen/btn_layout_width"
				android:layout_height="@dimen/btn_layout_height"
				android:layout_margin="@dimen/btn_layout_margin"
			/>

		<Button android:id="@+id/btn_pause"
				android:background="@drawable/btn_pause"
				android:layout_width="@dimen/btn_layout_width"
				android:layout_height="@dimen/btn_layout_height"
				android:layout_margin="@dimen/btn_layout_margin"
			/>

		<Button android:id="@+id/btn_stop"
				android:background="@drawable/btn_stop"
				android:layout_width="@dimen/btn_layout_width"
				android:layout_height="@dimen/btn_layout_height"
				android:layout_margin="@dimen/btn_layout_margin"
			/>

		<Button android:id="@+id/btn_next_song"
				android:background="@drawable/btn_next"
				android:layout_width="@dimen/btn_layout_width"
				android:layout_height="@dimen/btn_layout_height"
				android:layout_margin="@dimen/btn_layout_margin"
			/>
	</LinearLayout>

</LinearLayout>

